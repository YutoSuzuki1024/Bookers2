<div class="sidebar">
	<h2>User info</h2>

	<table>
		<tr><th><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th><th></th>
		</tr>
		<tr>
			<td>name</td><td><%= @book.user.name %></td>
		</tr>
		<tr>
			<td>introduction</td><td><%= @book.user.introduction %></td>
		</tr>
	</table>

	<% if @book.user.id == current_user.id %>
		<%= link_to "btn", edit_user_path(@user.id) %>
	<% end %>

	<h2>New book</h2>
	<%= form_for (@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Opinion</p>
		<%= f.text_area :body %>
		<%= f.submit "Create Book" %>
	<% end %>
	
</div>

<main>
	<h2>Book detail</h2>
	<table>
		<tr>
			<td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br>
				<%= link_to "#{@book.user.name}", user_path(@book.user.id) %></td>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
			<% if @book.user.id == current_user.id %>
				<td><%= link_to "Edit", edit_book_path(@book) %></td>
				<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
			<% end %>
		</tr>
	</table>
</main>