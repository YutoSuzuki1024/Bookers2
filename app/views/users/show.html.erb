<div class="container">
	<div class="row">
		<%= render 'users/sidebar', book: @book, user: @user %>

		<main class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th><th>Title</th><th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
						<td><%= link_to "#{book.title}", book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</main>
	</div>
</div>